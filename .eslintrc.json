{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "rules": {
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }],

    // change default indent behaviour
    "indent": "off",
    "indent-legacy": ["error", 2],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [2, "never"]
  }
}
